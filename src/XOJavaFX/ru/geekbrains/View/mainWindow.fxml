<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox fx:controller="XOJavaFX.ru.geekbrains.Controller.ControllerMainWindow" xmlns:fx="http://javafx.com/fxml">
    <MenuBar>
        <menus>
            <Menu text="Игра">
                <items>
                    <MenuItem text="Новая игра" onAction="#newGame" accelerator="F2"/>
                    <MenuItem text="Параметры" onAction="#options" accelerator="F3"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Выход" onAction="#clickOnExit" accelerator="F4"/>
                </items>
            </Menu>
            <Menu text="Помощь">
                <items>
                    <MenuItem text="Справка" onAction="#help" accelerator="F1"/>
                    <MenuItem text="О программе" onAction="#about"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <GridPane>

    </GridPane>
</VBox>


